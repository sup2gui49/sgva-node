# SGVA-Node Environment Variables Configuration

# JWT Secret Key (REQUIRED)
# Generate a secure random string with at least 32 characters
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=REPLACE_WITH_GENERATED_KEY_MINIMUM_32_CHARACTERS_REQUIRED

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
# The database file will be created automatically at this path
DATABASE_PATH=./database/sgva.db

# Google Generative AI (Optional)
# Only needed if using AI features
# GOOGLE_API_KEY=your_google_api_key_here
